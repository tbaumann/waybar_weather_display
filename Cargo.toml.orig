[package]
name = "waybar_weather_display"
edition = "2021"
version = "0.3.0"
description = "Waybar Weather Display Module using OpenMeteo API"
rust-version = "1.62.1"
authors= ["Michael Petersen <development@michaelpetersen.co>"]
license = "GPL-3.0-or-later"
repository ="https://github.com/MichaelPetersen22/waybar_modules.git"

[profile.release]
opt-level = 3

[dependencies]
clap = {version = "3.2.16", features = ["derive"]}
reqwest ={ version = "0.11.11", features = ["blocking"]}
serde = { version = "1.0.140", features = ["derive"] }
serde_json = "1.0.82"
